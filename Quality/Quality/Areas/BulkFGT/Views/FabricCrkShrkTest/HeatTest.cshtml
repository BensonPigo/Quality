            // ( VerticalTest1 + VerticalTest2 + VerticalTest3 ) / 3
            var avg = Round(accDiv(accAdd(accAdd(value1, value2), value3), 3));
            $('#Heat_Detail_' + idx + '__VerticalAverage').val(avg);

            if (original == 0) {
                $('#Heat_Detail_' + idx + '__VerticalRate').val(0);
                return;
            }

            // (VerticalAverage - VerticalOriginal) / VerticalOriginal * 100
            var rate = Round(accMul(accDiv(accSubtr(avg, original), original), 100));
            $('#Heat_Detail_' + idx + '__VerticalRate').val(rate > 100 ? 100 : rate);
        });
    }

