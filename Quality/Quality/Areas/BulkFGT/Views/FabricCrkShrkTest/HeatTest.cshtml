<script type="text/javascript">
    var msg;
    var EditMode;
    var True = true;
    var False = false;
    var poid = '@Model.Heat_Main.POID';
    var seq1 = '@Model.Heat_Main.SEQ'.split(' ')[0];
    var seq2 = '@Model.Heat_Main.SEQ'.split(' ')[1];

    $(function () {
        msg = new MessagerAlert();
        EditMode = false;
        @Html.Raw(Model.ErrorMessage);
        IsEditModeChange();
    });

    function IsEditModeChange() {
        EditModeButtionBind();
        $('#Picture').addClass("IsEditMode");
        // 按編輯為控制disabled，如果是編輯模式下不給使用者操作，請在元件身上加上readonly
        if (EditMode) {

            $("#Edit, #Encode, #Amend, #Excel ,#SendMail").removeClass("IsEditMode");
            $('#Encode, #Amend, #Excel ,#SendMail').unbind('click');

            $('#Save, #New').addClass("IsEditMode");
            $(".DataTable:not(.DetailTable) textarea").removeAttr("disabled", "disabled");
            $(".DetailTable input,.DetailTable select, #Heat_Main_HeatRemark").removeAttr("disabled", "disabled");
            $(".detailDelete").show();
            DetailButtonBind();
        }
        else {
            $('#Save, #New').unbind('click').removeClass("IsEditMode");
            $(".DataTable:not(.DetailTable) textarea").attr("disabled", "disabled");
            $(".DetailTable input,.DetailTable select, #Heat_Main_HeatRemark").attr("disabled", "disabled");
            $(".detailDelete").hide();
            $('#Excel ,#SendMail').addClass("IsEditMode");

            if (@Model.Heat_Main.HeatEncode == false) {
                $("#Edit, #Encode").addClass("IsEditMode");
                $("#Amend").unbind('click');
            }

            if (@Model.Heat_Main.HeatEncode == true) {
                $("#Amend").addClass("IsEditMode");
                $("#Edit, #Encode").unbind('click');
            }
        }
    }

    function EditModeButtionBind() {
        $('#Edit').on('click', function () {
            if ('@Model.ID' != '') {
                EditMode = true;
                IsEditModeChange();
            }
        });

        $('#Save').on('click', function (e) {
            var detail = [];
            var ErrMsg = "";

            $('.DetailTable > tbody > tr').each(function (index, data) {
                var idx = $(this).closest('tr').attr('idx');
                var roll = $('Heat_Detail__' + idx + '__Roll').val();
                var dyelot = $('#Heat_Detail_' + idx + '__Dyelot').val();
                var inspector = $('#Heat_Detail_' + idx + '__Inspector').val();
                var restult = $('#Heat_Detail_' + idx + '__Result').val();

                if (roll == "" || dyelot == "") {
                    ErrMsg += "Roll and Dyelot cannot be empty";
                    return false;
                }

                var checkValue = [];
                checkValue.push($('#Heat_Detail_' + idx + '__HorizontalOriginal').val());
                checkValue.push($('#Heat_Detail_' + idx + '__VerticalOriginal').val());

                checkValue.push($('#Heat_Detail_' + idx + '__HorizontalTest1').val());
                checkValue.push($('#Heat_Detail_' + idx + '__HorizontalTest2').val());
                checkValue.push($('#Heat_Detail_' + idx + '__HorizontalTest3').val());
                checkValue.push($('#Heat_Detail_' + idx + '__VerticalTest1').val());
                checkValue.push($('#Heat_Detail_' + idx + '__VerticalTest2').val());
                checkValue.push($('#Heat_Detail_' + idx + '__VerticalTest3').val());

                if (checkValue.includes("") || checkValue.includes(null)) {
                    ErrMsg += "Horizontal and Vertical cannot be empty.";
                    return false;
                }

                if (inspector == "") {
                    ErrMsg += "Lab Tech cannot be empty";
                    return false;
                }

                if (restult == "") {
                    ErrMsg += "Result cannot be empty";
                    return false;
                }
            });

            if (ErrMsg != "") {
                msg.WithError(ErrMsg);
                return;
            }

            // 重新調整index 順序。
            $('.DetailTable > tbody > tr').each(function (index, data) {
                var idx = $(this).closest('tr').attr('idx');
                if (idx != index) {
                    $.each($(this).find("input[id^='Heat_Detail']"), function () {
                        var tableName = $(this).attr('name').substr(0, $(this).attr('name').indexOf("["));
                        var rollName = $(this).attr('name').substr($(this).attr('name').indexOf("]") + 2, $(this).attr('name').length - $(this).attr('name').indexOf("]"));
                        $(this).attr("id", tableName + "_" + index.toString() + "__" + rollName);
                        $(this).attr("name", tableName + "[" + index.toString() + "]." + rollName);
                    });

                    $.each($(this).find("select[id^='Heat_Detail']"), function () {
                        var tableName = $(this).attr('name').substr(0, $(this).attr('name').indexOf("["));
                        var rollName = $(this).attr('name').substr($(this).attr('name').indexOf("]") + 2, $(this).attr('name').length - $(this).attr('name').indexOf("]"));
                        $(this).attr("id", tableName + "_" + index.toString() + "__" + rollName);
                        $(this).attr("name", tableName + "[" + index.toString() + "]." + rollName);
                    });
                }
            });

            document.getElementById("DetailForm").submit();
        });

        $('#Picture').on('click', function () {
            var para = "?Title=" + $('.page-header span').html() + "&EditMode=" + EditMode;
            para += "&" + "Table=FIR_Laboratory";
            para += "&" + "TargetBeforeColumn=Heat_Main_HeatTestBeforePicture";
            para += "&" + "TargetAfterColumn=Heat_Main_HeatTestAfterPicture";
            para += "&" + "BeforeColumn=HeatTestBeforePicture";
            para += "&" + "AfterColumn=HeatTestAfterPicture";
            para += "&" + "PKey_1=ID";
            para += "&" + "PKey_1_Val=" + $('#ID').val();
            window.open('@Url.Action("PictureList", "PublicWindow",new { Area=""})' + para, 'Picture List', config = 'toolbar=no,status=no,location=no,width=1024,height=750');
        });

        $('#New').on('click', function () {
            AddDetailRow();
        });

        $('#Excel').unbind('click').on('click', function () {
            ToReport();
        });

        $('#SendMail').unbind('click').on('click', function () {
            var para = '?Subject=@Model.Heat_Main.MailSubject';
            window.open('@Url.Action("SendMailer", "SendMailAttachfiles", new { Area=""})' + para, 'SendMail', config = 'toolbar=no,status=no,location=no,width=800,height=400');
        });

        if (@Model.Heat_Main.HeatEncode == false) {
            $('#Encode').on('click', function (e) {
                var detail = [];
                var ErrMsg = "";

                // 表身是否至少有一列資料
                var rowCount = $('.DetailTable tbody tr').length;
                if (rowCount == 0) {
                    msg.WithError('Please test one Roll least.');
                    return;
                }

                $.ajax({
                    url: "@Url.Action("Encode_Heat", "FabricCrkShrkTest", new { Area = "BulkFGT" })",
                    type: 'POST',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify({ ID: $('#ID').val() }),
                    async: false,
                    success: function (data) {
                        if (data.Result) {
                            if (data.testResult == "Fail") {
                                FailMail();
                            }
                            else {
                                msg.WithSuccesCheck("Success", function () {
                                    location.reload();
                                });
                            }
                        }
                        else {
                            msg.WithError(data.ErrorMessage);
                        }
                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        console.log(xhr.responseText);
                    }
                });
            });
