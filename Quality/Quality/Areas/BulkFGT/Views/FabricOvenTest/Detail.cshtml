                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify({ POID: $('#Main_POID').val(), TestNo: $('#Detail_No').val()}),
                    async: false,
                    success: function (data) {
                        if (data.Result) {
                            if (data.ovenTestResult == "Fail") {
