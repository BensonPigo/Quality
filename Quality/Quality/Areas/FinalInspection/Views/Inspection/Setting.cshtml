            <div class="detail-dialog-content dialog-content-w-icon" style="height:40vh">
                <table cellspacing="100" id="CartonTable" class="table table-striped display">
                    <thead>
                        <tr class="row-name">
                            <th>Select</th>
                            <th>Packing List ID</th>
                            <th>CTN No</th>
                            <th>SP</th>
                        </tr>
                    </thead>
