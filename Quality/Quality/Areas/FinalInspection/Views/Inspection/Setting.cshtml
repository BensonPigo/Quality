                        @for (int i = 0; i < Model.SelectCarton.Count; i++)
                        {
                            <tr class="row-content" style="vertical-align: middle; text-align: center;">
                                <td>
                                    @*@Html.CheckBox($"Carton_Select_[{i}]", Model.SelectCarton[i].Selected, new { @class = "messageCheckbox", @Idx = i, @CTNNo = Model.SelectCarton[i].CTNNo, @PackingListID = Model.SelectCarton[i].PackingListID, @OrderID = Model.SelectCarton[i].OrderID, @onclick = "SelectCartonChange(this)" })*@
