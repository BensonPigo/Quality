        function processSelectQtyBreakdown(list) {
            if (!list || list.length === 0) {
                return list;
            }

            // 排序函數
            function getSortKey(sizeCode) {
                if (!sizeCode) {
                    return 'Z'; // 空值排在最後
                }

                // 檢查是否為純數字
                if (/^\d+$/.test(sizeCode)) {
                    return `A${sizeCode.padStart(5, '0')}`; // 純數字排在最前面
                }

                // 解析 size code 的各個部分
                const parts = sizeCode.match(/^(\d+)([A-Za-z]+)(\d*)$/);
                if (!parts) {
                    return `Z${sizeCode}`; // 無法解析的格式排在最後
                }

                const [, numberPart, letterPart, lastNumberPart] = parts;
                const baseNumber = numberPart.padStart(5, '0');
                const suffixNumber = lastNumberPart.padStart(2, '0');

                return `B${baseNumber}${letterPart}${suffixNumber}`;
            }

            // 先排序
            const sortedList = [...list].sort((a, b) => {
                // 先比較 OrderID
                if (a.OrderID !== b.OrderID) {
                    return a.OrderID.localeCompare(b.OrderID);
                }
                // OrderID 相同時，比較 Article
                if (a.Article !== b.Article) {
                    return a.Article.localeCompare(b.Article);
                }
                // OrderID 和 Article 相同時，比較 SizeCode
                return getSortKey(a.SizeCode).localeCompare(getSortKey(b.SizeCode));
            });


            // 將清單依 OrderID 、Article 分組
            const groupedData = sortedList.reduce((groups, item) => {
                if (item.Junk) {
                    return groups;
                }
                const groupKey = `${item.OrderID}_${item.Article}`;
                if (!groups[groupKey]) {
                    groups[groupKey] = [];
                }
                groups[groupKey].push(item);
                return groups;
            }, {});


            // 為每個群組設定預設值
            Object.values(groupedData).forEach(group => {
                let defaultValue = 10;
                group.forEach(item => {
                    if (!item.Junk) {
                        item.DefaultLineItem = defaultValue;
                        defaultValue += 10;
                    }
                });
            });

            return sortedList;
        }

