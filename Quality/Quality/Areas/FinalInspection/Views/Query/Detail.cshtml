<div class="qtyBreakdown" title="Select Qty Breakdown">
    <div class="" style="width:40vw;">
        <table cellspacing="100" id="QtyBreakdownTable" class="table table-striped display" style="width: 40vw;">
            <thead>
                <tr class="row-name">
                    <th>OrderID</th>
                    <th>Article</th>
                    <th>Size</th>
                    <th>Line Item</th>
                    <th>Junk</th>
                </tr>
            </thead>
            <tbody id="qtyBreakdownBody">
                @for (int i = 0; i < Model.SelectQtyBreakdownList.Count; i++)
                {
                    <tr class="row-content" style="vertical-align: middle; text-align: center;">
                        <td class="QtyBreakdownTableOrderID">
                            @Html.DisplayFor(o => Model.SelectQtyBreakdownList[i].OrderID)
                        </td>
                        <td>
                            @Html.DisplayFor(o => Model.SelectQtyBreakdownList[i].Article)
                        </td>
                        <td>
                            @Html.DisplayFor(o => Model.SelectQtyBreakdownList[i].SizeCode)
                        </td>
                        <td>
                            <input type="number" ID="QtyBreakdown_LineItem_[@i]" OrderID="@Model.SelectQtyBreakdownList[i].OrderID" value="@Model.SelectQtyBreakdownList[i].LineItem" defaultVal="@Model.SelectQtyBreakdownList[i].DefaultLineItem" Idx="@i" min="0" />
                        </td>
                        <td>
                            @{ string isChecked = Model.SelectQtyBreakdownList[i].Junk ? "checked" : string.Empty;}
                            <input type="checkbox" ID="QtyBreakdown_Junk_[@i]"
                                   class="messageCheckbox"
                                   Idx="@i"
                                   OrderID="@Model.SelectQtyBreakdownList[i].OrderID"
                                   SizeCode="@Model.SelectQtyBreakdownList[i].SizeCode"
                                   @Html.Raw(isChecked)
                                   onclick="JunkQtyBreakdownChange(this)" style="width: 1.4em;" />
                        </td>
                        @*<td>
                                @Model.SelectQtyBreakdownList[i].OrderID-
                            </td>*@
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <button class="btn" style="background-color: #E00000; color: white; font-size: 15px; height: 40px; border-radius: 21px; float: right;" onclick="QtyBreakDownSave()">Save</button>
        <button class="btn" style="background-color: #E00000; color: white; font-size: 15px; height:40px; border-radius: 21px;float:right;" onclick="QtyBreakDownDefault()">Default</button>
    </div>
</div>


