<style type="text/css">


    #myTable_info {
        color: white
    }

    #myTable_previous, #myTable_next {
        color: white !important;
    }

    #row-name {
        color: black;
    }

    .searchFont {
        font-size: 1.5em;
        font-weight: 900;
    }

    .center {
        margin-top: 0vh;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 1vh;
    }
</style>

@model  List<DatabaseObject.ViewModel.FinalInspection.ViewMoistureResult>

<div class="content-scroll" style=" height: calc( 100vh - 280px )">
    <div class="inner-scroll" style="float:left">
        <div>
            <table cellspacing="100" id="myTable" class="table table-striped display">
                <thead>
                    <tr id="row-name" class="row-name">
                        <th>Article</th>
                        <th>CTN#</th>
                        <th>Detection Instrument</th>
                        <th>Fabrication</th>
                        <th>Garment Moisture Standard</th>
                        <th>Garment Moisture Top</th>
                        <th>Garment Moisture Middle</th>
                        <th>Garment Moisture Bottom</th>
                        <th>Carton Moisture Standard</th>
                        <th>Carton Moisture Inside</th>
                        <th>Carton Moisture Outside</th>
                        <th>GResult</th>
                        <th>Action</th>
                        <th>Remark</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr class="row-content" style="vertical-align: middle; text-align: center;">
                        <td>
                            @Html.DisplayFor(modelItem => item.Article)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CTNNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Instrument)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fabrication)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GarmentStandard)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GarmentTop)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GarmentMiddle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GarmentBottom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CTNStandard)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CTNInside)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CTNOutside)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Result)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Action)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remark)
                        </td>

                    </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>



<script type="text/javascript">


    var msg = new MessagerAlert();

    $(function () {

        $('#myTable').DataTable({

            "pageLength": 10,
            "filter": false,
            "paging": true,
            "scrollY": "49vh",
            "scrollCollapse": true,

        });
    });

</script>




