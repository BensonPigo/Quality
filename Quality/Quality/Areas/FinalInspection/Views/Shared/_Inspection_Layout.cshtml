<div class="UpWhiteBackgrond al-c">
    <div class="al-m" style="width:100%">
        @*<div style='float:left;'><h1 style="font-size:1.2em">Inspection Detail</h1></div>*@
        @{
            List<DatabaseObject.ManufacturingExecutionDB.FinalInspection_Step> allStep = new List<DatabaseObject.ManufacturingExecutionDB.FinalInspection_Step>();
            if (ViewData["FinalInspectionAllStep"] != null)
            {
                allStep = (List<DatabaseObject.ManufacturingExecutionDB.FinalInspection_Step>)ViewData["FinalInspectionAllStep"];
            }

            Dictionary<string, string> list = new Dictionary<string, string>();

            foreach (var item in allStep)
            {
                list.Add(item.StepName.Replace(" ", String.Empty), item.StepName);
            }
            //list.Add("General", "General");
            //list.Add("CheckList", "Check List");
            //list.Add("Measurement", "Measurement");
            //list.Add("AddDefect", "Add Defect");
            //list.Add("BeautifulProductAudit", "Beautiful Product Audit");
            //list.Add("Moisture", "Moisture");
            //list.Add("Others", "Others");

            List<string> result = new List<string>();
            string url = Request.Url.AbsoluteUri.ToLower();
            string test = string.Empty;
            foreach (var item in list)
            {
                if (url.Contains(item.Key.ToLower()))
                {
                    result.Add($"<div style='color:#E62513;display:inline-block'><h1 style='font-size:1.1em'>{item.Value}</h1></div>");
                }
                else
                {
                    result.Add($"<div style='display:inline-block'><h1 style='font-size:1.1em'>{item.Value}</h1></div>");
                }
            }
            string link = string.Join(" <img src='/Image/Icon/East.png' style='width:1.5em;vertical-align:middle' /> ", result);
            @Html.Raw(link)
        }
    </div>
</div>