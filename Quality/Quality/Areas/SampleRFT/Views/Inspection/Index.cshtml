        Html.RenderPartial("SelectItem", new SelectItem_ViewModel()
        {
            IDX = "Style",
            keyValues = keyValues,
        });

        Html.RenderPartial("SelectItem", new SelectItem_ViewModel()
        {
            IDX = "SP",
            keyValues = keyValues,
        });

        keyValues.Add("SP#", "");
        Html.RenderPartial("SelectItem", new SelectItem_ViewModel()
        {
            IDX = "Article",
