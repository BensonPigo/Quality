@using DatabaseObject.ViewModel.SampleRFT
@{
    ViewBag.Title = "PrintBarcode";
    Layout = null;
    List<PrintBarcode_Detail> StyleUkeyList = new List<PrintBarcode_Detail>();

    if (ViewData["StyleUkeyList"] != null)
    {
        StyleUkeyList = (List<PrintBarcode_Detail>)ViewData["StyleUkeyList"];
    }
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/ThirdParty/plugins/JsBarcode/JsBarcode.all.min.js"></script>
<style>
    @@media print {
        body {
            counter-reset: page-number; /* 初始
                化，名字可自訂，數值為0 */
            text-align: center;
        }

        .barcodeDiv {
            page-break-after: always;
        }
    }

    @@page {
        margin: 0; /* 邊界與內容的距離 */
        size: 9cm 4cm; /*列印紙張大小*/
    }
</style>

@foreach (var item in StyleUkeyList)
{
    <label style="font-weight:bold; font-family: monospace;">@item.StyleID</label>
    <div class="barcodeDiv">
        <svg class="barcode" jsbarcode-format="CODE128" jsbarcode-value="@item.StyleUkey-@item.SampleStageSerialKey" jsbarcode-width="3" jsbarcode-height="60"></svg>
    </div>

}

<script>

    $(function () {
        JsBarcode(".barcode").init();
        window.print();
    });

</script>