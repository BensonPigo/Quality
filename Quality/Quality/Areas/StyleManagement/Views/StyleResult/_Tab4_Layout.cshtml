@using DatabaseObject.ViewModel.SampleRFT

@model StyleResult_ViewModel

<style>
    #myTable4_info {
        color: black
    }

    #myTable4_previous, #myTable4_next {
        color: black !important;
    }

    #myTable4_wrapper, #myTable4_wrapper > .dataTables_scrollHeadInner {
        width: 100%
    }

    #row-name {
        color: black;
    }

    .aiCommentTooltipText {
        visibility: hidden;
        position: fixed;
        z-index: 1;
        background-color: pink;
        border: 1px solid black;
        border-radius: 2px;
        color: black;
        font-size: 1rem;
        padding: 0.5rem;
    }

    .aiCommentTooltip:hover .aiCommentTooltipText {
        visibility: visible;
    }
</style>
<table id="myTable4" class="table table-striped display">
    <thead>
        <tr class="row-name" id="row-name">
            <th>Article</th>
            <th>Type</th>
            <th>Test Name</th>
            <th>Last Result</th>
            <th>Last Test Date</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.BulkFGT.Any())
        {
            foreach (var item in Model.BulkFGT)
            {
                string color = item.LastResult == "Pass" ? "blue" : "red";
                <tr class="row-content aiCommentTooltip" style="vertical-align: middle; text-align: center;">
                    <td>@item.Article</td>
                    <td>@item.Type</td>
                    <td>@item.TestName</td>
                    <td style="color:@color">
                        @item.LastResult
                        @if (item.LastResult == "Fail" && (Model.BrandID == "ADIDAS" || Model.BrandID == "REEBOK"))
                        {
                            <img src="~/Image/Icon/Warning.png" width="25" height="25" class="" />
                            <span class="aiCommentTooltipText">@item.AIComment</span>
                        }
                    </td>
                    <td>
                        @{ string LastTestDate = item.LastTestDate.HasValue ? item.LastTestDate.Value.ToShortDateString() : string.Empty;}
                        @LastTestDate
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<script>
    $(function () {
        $('#myTable4').DataTable({
            "pageLength": 10,
            "autoWidth": false,
            "info": false,
            "filter": false,
            "paging": false,
            "info": false,
            "scrollY": "40vh",
            "scrollCollapse": true,
        });
    });
</script>