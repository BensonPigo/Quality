@using DatabaseObject.RequestModel;

@{
    ViewBag.Title = "SendMailer";
    Layout = null;
}

@model SendMail_Request
<link href="~/ThirdParty/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />

<script src="~/ThirdParty/SciCustom/js/jquery-3.4.1.min.js"></script>
<script src="~/ThirdParty/plugins/sweetalert2/promise.min.js"></script>
<script src="~/ThirdParty/plugins/sweetalert2/sweetalert2.min.js"></script>
<script src="~/ThirdParty/CustomScripts/common-1.0.0.js"></script>
<script src="~/ThirdParty/CustomScripts/Message-1.0.0.js"></script>
<script src="~/ThirdParty/CustomScripts/basic.js"></script>
<script src="~/ThirdParty/SciCustom/js/jquery-ui.min.js"></script>
<script src="~/ThirdParty/SciCustom/js/main.js"></script>

<style>
    .DataTable {
        width: 100%
        ;
        font-size: 1rem;
        font-weight: bold;
        border: solid 1px black;
        background-color: white;
    }

        .DataTable > tbody img {
            cursor: pointer;
        }

        .DataTable > tbody > tr:nth-of-type(odd) {
            background-color: #ffffff;
        }

        .DataTable > tbody > tr:nth-of-type(even) {
            background-color: #F0F2F2;
        }

        .DataTable > tbody > tr > td {
            border: solid 1px gray;
            padding: 1em;
            text-align: left;
            vertical-align: middle;
        }
</style>
@using (@Html.BeginForm("SendMailer", "SendMailAttachfiles", FormMethod.Post, new { @id = "form1", @enctype = "multipart/form-data" }))
{
    <table class="DataTable">
        <tr>
            <td>
                To
            </td>
            <td>
                @Html.TextBoxFor(m => m.To, new { @style = "width:100%;" })
            </td>
        </tr>
        <tr>
            <td>
                CC
            </td>
            <td>
                @Html.TextBoxFor(m => m.CC, new { @style = "width:87%;" })
                <input type="button" id="btnGroup" name="name" style="width:12%;" value="Group" />
            </td>
        </tr>
        <tr>
            <td>
                Subject
            </td>
            <td>
                @Html.TextBoxFor(m => m.Subject, new { @style = "width:100%;" })
            </td>
        </tr>
        <tr>
            <td>
                Other Content
            </td>
            <td>
                @Html.TextBoxFor(m => m.Body, new { @style = "width:100%;" })
            </td>
        </tr>
        <tr>
            <td>
                Other Attachment
            </td>
            <td>
                @for (int i = 0; i < Model.FileonServer.Count; i++)
                {
                    @Html.DisplayFor(model => Model.FileonServer[i])
                    @Html.HiddenFor(model => Model.FileonServer[i])
                    <br />
                }
                <input id="otherFile" type="file" name="fileUploader" multiple="multiple" />
            </td>
        </tr>
        <tr>
            <td colspan="2" style="vertical-align: middle; text-align: center;">
                <input type="button" id="btnSend" value="Send" />
                <input class="sendMailExit" type="button" value="Exit" />
            </td>
        </tr>
    </table>

}


<script type="text/javascript">
    $(function () {
        $('.sendMailExit').on('click', function () {
            window.close();
        });

        $("#btnGroup").click(function () {
            FailMail();
        });

        $("#btnSend").click(function () {

            // 取出檔案Raw data
            let rawFiles = document.getElementById('otherFile').files;
            let form = new FormData();

            $.each(rawFiles, function () {
                form.append(this.name, this);
            })


            // 呼叫父視窗的GetSendMailer Function，把值傳回去
            var Mail = {
                To: $("#To").val(),
                CC: $("#CC").val(),
                Subject: $("#Subject").val(),
                Body: $("#Body").val(),
                RawFiles: rawFiles,
            };

            window.opener.GetSendMailer(Mail);
            window.close();
        });

    });

    function FailMail() {
        var para = "?Title=Group&Type=BulkFGT&ExitReload=False";

        window.open('@Url.Action("TestFailMailList", "PublicWindow",new { Area=""})' + para, 'Mail List', config = 'toolbar=no,status=no,location=no,width=650,height=750');
    }

    function GetTestFailMailList(data) {
        var to = "";
        var cc = "";
        $.each(data, function (index, value) {
            if (value.To != '') {
                to += value.To + ';';
            }
            if (value.CC != '') {
                cc += value.CC + ';';
            }
        });

        if (to != "") {
            $("#CC").val(cc);
        }
    }
</script>